pipeline {
    agent any

    environment {
        DOTNET_CLI_HOME = '/var/jenkins_home/.dotnet'
        DOTNET_SKIP_FIRST_TIME_EXPERIENCE = '1'
        DOTNET_NOLOGO = '1'
        PROJECT_PATH = 'API/API.csproj'
    }

    stages {

        // =======================================================
        // 1Ô∏è‚É£ CHECKOUT
        // =======================================================
        stage('Checkout c√≥digo fuente') {
            steps {
                echo "üì• Clonando repositorio desde GitHub..."
                checkout scm
                sh 'ls -R DevOps || true'
            }
        }

        // =======================================================
        // 2Ô∏è‚É£ DETECTAR ENTORNO SEG√öN LA RAMA
        // =======================================================
        stage('Detectar entorno') {
            steps {
                script {
                    def branch = env.GIT_BRANCH?.replace('origin/', '')?.trim()
                    echo "‚úÖ Rama detectada: ${branch}"

                    switch(branch) {
                        case 'develop':
                        case 'dev':
                            env.ENVIRONMENT = 'develop'; break
                        case 'qa':
                            env.ENVIRONMENT = 'qa'; break
                        case 'staging':
                            env.ENVIRONMENT = 'staging'; break
                        case 'main':
                        case 'prod':
                            env.ENVIRONMENT = 'prod'; break
                        default:
                            error("‚ùå Rama no reconocida: ${branch}")
                    }

                    env.ENV_DIR = "DevOps/${env.ENVIRONMENT}"
                    env.COMPOSE_FILE = "${env.ENV_DIR}/docker-compose.yml"
                    env.ENV_FILE = "${env.ENV_DIR}/.env.${env.ENVIRONMENT}"
                    env.DB_COMPOSE_FILE = "docker-compose.yml"  // Compose de bases de datos compartidas

                    echo """
                    üåé Entorno asignado: ${env.ENVIRONMENT}
                    üìÑ Compose file (API): ${env.COMPOSE_FILE}
                    üìÅ Env file: ${env.ENV_FILE}
                    üóÑÔ∏è Compose file (DB): ${env.DB_COMPOSE_FILE}
                    """
                }
            }
        }

        // =======================================================
        // 3Ô∏è‚É£ COMPILAR Y PUBLICAR .NET DENTRO DE CONTENEDOR SDK
        // =======================================================
        stage('Compilar .NET dentro de contenedor SDK') {
            steps {
                script {
                    docker.image('mcr.microsoft.com/dotnet/sdk:9.0')
                        .inside('-v /var/run/docker.sock:/var/run/docker.sock -u root:root') {
                        sh '''
                            echo "üîß Restaurando dependencias .NET..."
                            dotnet restore ${PROJECT_PATH}
                            dotnet build ${PROJECT_PATH} --configuration Release
                            dotnet publish ${PROJECT_PATH} -c Release -o ./publish
                        '''
                        }
                }
            }
        }

        // =======================================================
        // 4Ô∏è‚É£ CONSTRUIR IMAGEN DOCKER
        // =======================================================
        stage('Construir imagen Docker') {
            steps {
                script {
                    echo "üê≥ Construyendo imagen Docker para EXPERIENCIAS (${env.ENVIRONMENT})"
                    sh """
                        docker build -t experiencias-api-${env.ENVIRONMENT}:latest -f API/Dockerfile .
                    """
                }
            }
        }

        // =======================================================
        // 5Ô∏è‚É£ LIMPIAR CONTENEDORES ANTERIORES
        // =======================================================
        stage('Limpiar contenedores anteriores') {
            steps {
                script {
                    echo "üßπ Eliminando contenedores antiguos del entorno ${env.ENVIRONMENT}..."
                    sh """
                        docker compose -f ${env.COMPOSE_FILE} down --remove-orphans || true
                        docker compose -f ${env.DB_COMPOSE_FILE} down --remove-orphans || true
                    """
                }
            }
        }

        // =======================================================
        // 6Ô∏è‚É£ PREPARAR RED Y BASES DE DATOS
        // =======================================================
        stage('Preparar red y base de datos') {
            steps {
                script {
                    sh """
                        echo "üåê Creando red externa compartida (si no existe)..."
                        docker network create network_experiencesig || true

                        echo "üóÑÔ∏è Levantando stack de bases de datos..."
                        docker compose -f ${env.DB_COMPOSE_FILE} up -d
                    """

                    echo "‚è≥ Esperando que SQL Server est√© listo para conexiones..."
                    sh '''
                        until docker exec exp-sqlserver-develop /opt/mssql-tools/bin/sqlcmd -S localhost -U sa -P "Admin123!" -Q "SELECT 1" >/dev/null 2>&1; do
                            echo "Esperando que SQL Server inicialice..."
                            sleep 5
                        done
                        echo "‚úÖ SQL Server listo para aceptar conexiones."
                    '''
                }
            }
        }

        // =======================================================
        // 7Ô∏è‚É£ DESPLEGAR API CON DOCKER COMPOSE
        // =======================================================
        stage('Desplegar EXPERIENCIAS API') {
            steps {
                script {
                    echo "üöÄ Desplegando entorno ${env.ENVIRONMENT}..."
                    sh """
                        cd ${env.ENV_DIR}
                        docker compose -f docker-compose.yml --env-file .env.${env.ENVIRONMENT} up -d --build
                    """
                }
            }
        }
    }

    // =======================================================
    // üîö POST BUILD
    // =======================================================
    post {
        success {
            echo "üéâ Despliegue completado correctamente para ${env.ENVIRONMENT}"
        }
        failure {
            echo "üí• Error durante el despliegue en ${env.ENVIRONMENT}"
        }
        always {
            echo "üßπ Limpieza final del pipeline completada."
        }
    }
}